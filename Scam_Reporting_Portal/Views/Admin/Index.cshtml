@model IEnumerable<Scam_Reporting_Portal.Models.ScamReport>
@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-hourglass-split"></i> Admin - Pending Reports
        </h2>
        <span class="badge bg-dark p-2">
            Admin: @Session["UserName"]
        </span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Submitted By</th>
                        <th>Created On</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Title</td>
                                @*<td>@r.User?.Name</td>*@
                                <td>@r.User.Name</td>
                                <td>@r.CreatedAt.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")</td>
                                <td class="text-center">
                                    @using (Html.BeginForm("Approve", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", r.Id)
                                        <button type="submit" class="btn btn-success btn-sm me-2">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>

                                    }
                                    @using (Html.BeginForm("Reject", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", r.Id)
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                <i class="bi bi-info-circle"></i> No pending reports found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
