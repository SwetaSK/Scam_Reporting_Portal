@model Scam_Reporting_Portal.Models.ScamReport
@{
    ViewBag.Title = "Report a Scam";
}

<h2 class="text-center text-danger mt-4 mb-4">🚨 Report a Scam</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Create", "Reports", FormMethod.Post, new { @class = "card p-4 shadow-lg rounded" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Title, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter scam title", required = "required" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "Describe the scam", required = "required" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Location, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Enter scam location (optional)" })
                @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-danger w-100">Submit Report</button>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
        background: #fff;
    }

    h2 {
        font-weight: bold;
    }
</style>
