<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Scam Reporting Portal</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="bi bi-shield-lock"></i> Scam Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Session["UserId"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Login","Account")">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Register","Account")">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="text-white bi bi-person">
                                Hello, <strong>@Session["UserName"]</strong> (@Session["Role"])
                            </span>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Reports")">
                                <i class="bi bi-file-text"></i> Reports
                            </a>
                        </li>*@
                        if (Session["UserRole"]?.ToString() == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","Admin")">
                                    <i class="bi bi-gear"></i> Admin Panel
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("Logout","Account")">
                                <i class="bi bi-box-arrow-left"></i> Logout
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



